  <!-- Form Fields -->
  <form action="/register" method="post" enctype="multipart/form-data" class="space-y-4">
    <input type="text" placeholder="Full Name" class="w-full px-4 py-2 bg-zinc-700 rounded-xl focus:outline-none" name="username" />
    <input type="email" placeholder="Email" class="w-full px-4 py-2 bg-zinc-700 rounded-xl focus:outline-none" name="email" />
    <input type="password" placeholder="Password" class="w-full px-4 py-2 bg-zinc-700 rounded-xl focus:outline-none" name="password" />
    <input type="file" name="image" class="w-full px-4 py-2 bg-zinc-700 rounded-xl focus:outline-none" />
    <input type="submit" value="Create Account" class="w-full bg-blue-600 hover:bg-blue-700 transition px-4 py-2 rounded-xl font-semibold">
  </form>
  
  
